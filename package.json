{
  "name": "ai-debugging-assistant",
  "displayName": "AI Debugging Assistant",
  "description": "MVP: Static analysis with AST-based rules and AI-powered explanations (no code generation)",
  "version": "0.1.0",
  "publisher": "yourpublisher",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Debuggers",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-debugger-sidebar",
          "title": "AI Debugger",
          "icon": "$(debug)"
        }
      ]
    },
    "views": {
      "ai-debugger-sidebar": [
        {
          "id": "ai-debugger.issues",
          "name": "Issues",
          "when": "workbenchState != empty"
        }
      ]
    },
    "commands": [
      {
        "command": "ai-debugger.runScan",
        "title": "Run AI Debugging Analysis",
        "category": "AI Debugger"
      },
      {
        "command": "ai-debugger.explainIssue",
        "title": "Explain This Issue",
        "category": "AI Debugger"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "jest",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@types/babel__traverse": "^7.28.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
